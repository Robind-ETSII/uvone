<launch>
  <arg name="camera_name" default="front_camera" />
  <arg name="device" default="/dev/video0" />

  <node name="$(arg camera_name)" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="$(arg device)" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="$(arg camera_name)_link" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="file://$(find uvone_bringup)/config/sensors/$(arg camera_name)_calib.yaml" />
    <param name="camera_name" value="$(arg camera_name)"/>
    <param name="autofocus" value="false"/>
  </node>
  <node name="camera_proc" pkg="image_proc" type="image_proc" output="screen" ns="$(arg camera_name)"/>
</launch>
